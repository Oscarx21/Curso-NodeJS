
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagem/edit" method="POST">

            <input type="hidden" value="{{postagem._id}}" name="id">

            <label for="titulo">Titulo</label>
            <input type="text" value="{{postagem.titulo}}" name="titulo" class="form-control">

            <label for="slug">Slug</label>
            <input type="text" value="{{postagem.slug}}" name="slug" class="form-control">

            <label for="descricao">Descricao</label>
            <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control">

            <label for="conteudo">Conte√∫do</label>
            <textarea name="conteudo"  class="form-control">{{postagem.conteudo}}</textarea>

            <label for="categoria">Categorias</label>
            <select name="categoria" id="" class="form-control">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma cateogira criada</option>
                {{/each}}
            </select>

            <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>

        </form>
    </div>
</div>