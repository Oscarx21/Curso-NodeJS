<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="mb-4 btn btn-success">Nova postagem</button></a>

{{#each postagens}}
        <div class="card mt-4 mb-4">
            <div class="card-body">
                <h4>{{titulo}}</h4>
                <p>Descricao: {{descricao}}</p>
                <small>Data: {{data}}</small><br>
                <small>Categora: {{categoria.nome}}</small><br>
                <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a><br>
                <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar Postagem</button></a>

            </div>
        </div>
{{else}}
        <p>Nenhuma postagem registrada</p>
{{/each}}